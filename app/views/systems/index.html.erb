<p id="notice"><%= notice %></p>

<h1>Systems</h1>

<table>
  <thead>
    <tr>
      <th>Standard code</th>
      <th>Internal code</th>
      <th>Particular name</th>
      <th>X</th>
      <th>Y</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.standard_code %></td>
        <td><%= system.internal_code %></td>
        <td><%= system.particular_name %></td>
        <td><%= system.x %></td>
        <td><%= system.y %></td>
        <td><%= link_to 'Show', system %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<canvas width="100" height="100" id="canvas"></canvas>
<canvas width="100" height="100" id="canvas2"></canvas>
<canvas width="100" height="100" id="canvas3"></canvas>
<canvas width="100" height="100" id="canvas4"></canvas>

<%= link_to 'New System', new_system_path %>

<script type="text/javascript">
  $( document ).ready(function() {
    test = new StellarSystem('ABa1b12')
    test.constructTree()
    test.draw('canvas')

    test = new StellarSystem('ABab')
    test.constructTree()
    test.draw('canvas2')

    test = new StellarSystem('Aa1')
    test.constructTree()
    test.draw('canvas3')

    test = new StellarSystem('Aa0b')
    test.constructTree()
    test.draw('canvas4')
  });
</script>
